<idea-plugin>
  <id>com.widlofapps.theme.spectre</id>
  <name>Spectre Theme</name>
  <version>1.0</version>
  <vendor email="willwidlof@gmail.com" url="https://github.com/WillWidlof/SpectreTheme">Widlof Apps</vendor>

  <description><![CDATA[
      Spectre theme for IntelliJ IDEs aimed at Android Studio and IntelliJ IDEA.<br>
      <em>UI</em>
    ]]></description>

  <change-notes><![CDATA[
      1.0 Initial release, with default icons and custom colours.<br>
      <em>UI</em>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="191.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <themeProvider id="%THEME_ID%" path="/META-INF/spectre_theme.theme.json"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
